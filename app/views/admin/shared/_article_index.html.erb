  <% articles.each do |article| %>
    <div class="col-md-6 border">
      <div class="row">
        <div class="col-md-6 p-3">
          <%= link_to (image_tag article.get_image, width: '100%', height: '100%'), admin_article_path(article) %>
        </div>
        <div class="col-md-6 p-3">
          <div class="p-3">
            <%= link_to article.title, admin_article_path(article), class: "text-dark h5" %>
          </div>
          <div class="p-3">
            <i class="fas fa-user"></i>
            <% if article.user_id == 0 %>
              <%= admin.name %>
            <% else %>
              <%= "#{article.user.name}" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
