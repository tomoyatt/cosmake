<div class="container">
  <label class="h4 bg-light">新規会員登録</label>
  <div class="row mb-2">
    <div class="col-lg-10">
      <%= form_with model: @user, url: user_registration_path do |f| %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>ユーザー名</td>
            <td>
              <%= f.text_field :name, autofocus: true %>
            </td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= f.email_field :email, autocomplete: "email" %></td>
          </tr>
          <tr>
            <td>
              パスワード
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %>文字以上)</em>
              <% end %>
              </td>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <td>パスワード(確認用)</td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "新規登録", class:"btn btn-success" %></td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
  <label class="h4 bg-light">既に登録済みの方</label>
  <div class="row mb-5">
    <div class="col-lg-1"></div>
    <div class="col-lg-11">
      <%= link_to "こちら", new_user_session_path %>　からログインしてください。
    </div>
  </div>
</div>
<%= render "public/shared/error_messages", resource: resource %>

