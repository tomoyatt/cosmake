<div class="container">
  <div class="row no-gutters">
    <div class="col-md-10 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h4 class="text-dark bg-light p-4 mb-0">新規登録</h4>
      <div class="p-4">
        <%= form_with model: @user, url: user_registration_path do |f| %>
          <div class="form-group row">
            <label class="col-md-4 col-sm-4 col-form-label">ユーザー名</label>
            <div class="col-md-8 col-sm-8">
              <%= f.text_field :name, autofocus: true %>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-md-4 col-sm-4 col-form-label">メールアドレス</label>
            <div class="col-md-8 col-sm-8">
              <%= f.email_field :email, autocomplete: "email" %>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-md-4 col-sm-4 col-form-label">
              パスワード
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %>文字以上)</em>
              <% end %>
            </label>
            <div class="col-md-8 col-sm-8">
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-md-4 col-sm-4 col-form-label">パスワード(確認用)</label>
            <div class="col-md-8 col-sm-8">
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-md-4 col-sm-4"></div>
            <div class="col-md-8 col-sm-8">
              <%= f.submit "新規登録", class:"btn btn-success" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= render "public/shared/error_messages", resource: resource %>

