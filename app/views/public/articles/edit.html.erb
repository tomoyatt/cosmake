<div class="container">
  <label class="h4 bg-light mb-5">投稿編集</label>
  <div class="row">
    <div class="col-lg-10">
      <div class="form mx-5">
        <div class="field">
          <%= form_with model: @article, url: article_path, method: :patch do |f| %>
            <%= f.label :タイトル, class:"mr-3" %>
            <%= f.text_field :title %><br>
            <%= f.label :カテゴリ, class:"mr-3" %>
            <%= f.collection_select :category_id, Category.all, :id, :name, include_blank: "--選択してください--" %><br>
            <%= f.label :サムネイル %>
            <%= f.file_field :image %><br>
            <%= f.label :投稿内容 %><br>
            <%= f.rich_text_area :content %><br>
            <%= f.label :公開ステータス %>
            <%= f.radio_button :is_active, true %> 公開
            <%= f.radio_button :is_active, false %> 非公開
            <%= f.submit "変更保存", class:"btn btn-success ml-3" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>