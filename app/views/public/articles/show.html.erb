<% if @article.user == current_user %>
  <%= link_to "編集する", edit_article_path, class:"btn btn-success ml-5" %>
<% end %>
<br>
<%= image_tag @article.get_image, size:'320x320' %>
<br>
<%= @article.title %>
<%= @article.content %>


<% if @article.favorited_by?(current_user) %>
  <p>
    <%= link_to article_favorites_path(@article), method: :delete do %>
      ♥<%= @article.favorites.count %> いいね
    <% end %>
  </p>
  <% else %>
  <p>
    <%= link_to article_favorites_path(@article), method: :post do %>
      ♡<%= @article.favorites.count %> いいね
    <% end %>
  </p>
<% end %>

<p>コメント件数: <%= @article.comments.count %></p>
<% @article.comments.each do |comment| %>
  <%= comment.user.name %>
  <%= comment.created_at.strftime('%Y/%m/%d') %><br>
  <%= comment.comment %>
  <% if comment.user == current_user %>
    <%= link_to "削除", article_comment_path(comment.article, comment), method: :delete %>
  <% end %>
<% end %>

<%= form_with model: [@article, @comment] do |f| %>
  <%= f.text_area :comment, size:'60x5', rows: '5', placeholder: "コメントをここに" %>
  <%= f.submit "コメントを送信", class:"btn btn-primary" %>
<% end %>

