<div class="container">
  <div class="row">
    <div class="col-md-8 col-sm-8 p-3 h4">
      <i class="fas fa-user"></i><%= "#{@user.name}" %>
    </div>
    <div class="col-md-4 col-sm-4 p-3 h5">
      <span class="float-right"><%= link_to "いいね一覧", favorites_user_path(@user), class: 'text-dark' %></span>
    </div>
  </div>
  <div class="h3 p-3">投稿一覧</div>
  <div class="row">
    <% @articles.each do |article| %>
    <div class="col-md-6 col-sm-6 border">
      <div class="row">
        <div class="col-md-4 col-sm-4 p-3">
          <%= link_to (image_tag article.get_image, size: '150x150'), article_path(article) %>
        </div>
        <div class="col-md-8 col-sm-8 p-3">
          <div class="p-3">
            <%= link_to article.title, article_path(article), class: "text-dark h5" %>
          </div>
          <div class="p-3">
            <i class="fas fa-user"></i>
            <%= "#{article.user.name}" %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <%= paginate @articles %>
</div>