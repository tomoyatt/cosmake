<div class="container">
  <div class="row no-gutters">
    <div class="col-md-10 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h4 class="text-dark bg-light p-4 mb-0">ログイン</h4>
      <div class="p-4">
        <%= form_with model: @user, url: user_session_path do |f| %>
          <div class="form-group row">
            <label class="col-md-4 col-sm-4 col-form-label">メールアドレス</label>
            <div class="col-md-8 col-sm-8">
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-md-4 col-sm-4 col-form-label">パスワード</label>
            <div class="col-md-8 col-sm-8">
              <%= f.password_field :password, autocomplete: "current-password" %>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-md-4 col-sm-4"></div>
            <div class="col-md-8 col-sm-8">
              <%= f.submit "ログイン", class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
        <label class="h6 p-3 d-flex justify-content-end">管理者の方は<%= link_to "こちら", new_admin_session_path %></label>
      </div>
    </div>
  </div>
</div>